<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spring16.cs442.com.obt_chat">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddUser"
            android:label="@string/title_activity_add__user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainChatWindow"
            android:label="@string/title_activity_main_chat_window"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PairDevices"
            android:label="@string/title_activity_pair_devices"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatList"
            android:label="@string/title_activity_chat_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatOptions"
            android:label="@string/title_activity_chat_options"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SavedChats"
            android:label="@string/title_activity_saved_chats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BlueToothSetting"
            android:label="@string/title_activity_blue_tooth_setting"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DeviceListActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>


    </application>

</manifest>
